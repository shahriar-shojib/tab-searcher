{
	"name": "tab-searcher",
	"displayName": "Tab searcher",
	"version": "0.0.1",
	"description": "A simple chrome extension that indexes current open tabs and provides fulltext search",
	"author": "Shahriar Shojib <me@shojib.dev>",
	"license": "MIT",
	"scripts": {
		"dev": "plasmo dev",
		"build": "tsc --noEmit && plasmo build",
		"package": "plasmo package",
		"test": "jest",
		"lint": "eslint . "
	},
	"dependencies": {
		"@orama/orama": "^3.0.1",
		"@orama/plugin-qps": "^3.0.1",
		"@radix-ui/react-slot": "^1.1.0",
		"@types/jest": "^29.5.14",
		"autoprefixer": "^10.4.20",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"lucide-react": "^0.456.0",
		"plasmo": "0.89.4",
		"postcss": "^8.4.48",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tailwind-merge": "^2.5.4",
		"tailwindcss": "^3.4.14",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@swc/core": "^1.9.2",
		"@swc/jest": "^0.2.37",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.0.1",
		"@types/chrome": "^0.0.280",
		"@types/node": "20.11.5",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"eslint": "^9.14.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-webextension-mock": "^3.9.0",
		"prettier": "3.2.4",
		"ts-jest": "^29.2.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0"
	},
	"manifest": {
		"host_permissions": [
			"<all_urls>"
		],
		"permissions": [
			"tabs",
			"storage",
			"scripting"
		]
	}
}
